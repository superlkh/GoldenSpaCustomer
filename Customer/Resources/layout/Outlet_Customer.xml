<?xml version="1.0" encoding="utf-8" ?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayoutTopic_Outlet_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackborder_customer"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        
        <ImageView
            android:id="@+id/imgback_Outlet_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_customer"/>
        <TextView
            android:id="@+id/TxtOutletName_Outlet_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi nhánh Nguyễn Bỉnh Khiêm"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewService_Outlet_Customer"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LinearLayoutTopic_Outlet_Customer"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>  
</RelativeLayout>
