<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    <LinearLayout
        android:id="@+id/LinearLayoutTopic_ChangePassword_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackborder_customer"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        
        <ImageView
            android:id="@+id/imgback_ChangePassword_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_customer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/TxtCurrentPass_ChangePassword_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu hiện tại"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/LinearLayoutTopic_ChangePassword_Customer"/>

    <EditText
        android:id="@+id/EdtCurrentPass_ChangePassword_ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/TxtCurrentPass_ChangePassword_Customer"/>


    <TextView
        android:id="@+id/TxtNewPass_ChangePassword_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu mới"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/EdtCurrentPass_ChangePassword_ChangePassword"/>

    <EditText
        android:id="@+id/EdtNewPass_ChangePassword_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/TxtNewPass_ChangePassword_Customer"/>

    <TextView
        android:id="@+id/TxtNewPassAgain_ChangePassword_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu mới"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/EdtNewPass_ChangePassword_Customer"/>

    <EditText
        android:id="@+id/EdtNewPassAgain_ChangePassword_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/TxtNewPassAgain_ChangePassword_Customer"/>

    <Button
        android:id="@+id/BtxSendConfirm_ChangePassword_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_below="@+id/EdtNewPassAgain_ChangePassword_Customer"
        android:layout_marginTop="15dp"
        android:background="#24C32B"/>

</RelativeLayout>
