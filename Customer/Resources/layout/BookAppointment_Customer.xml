<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayoutTopic_BookAppointment_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackborder_customer"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        
        <ImageView
            android:id="@+id/imgback_BookAppointment_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_customer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lịch hẹn"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/TxtOutlet_BookAppointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| Bạn muốn đến chi nhánh nào?"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/LinearLayoutTopic_BookAppointment_Customer"/>


    <Spinner
        android:id="@+id/spnOutlet_BookAppointment_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/TxtOutlet_BookAppointment_Customer">
        
    </Spinner>


    <TextView
        android:id="@+id/TxtDate_BookAppointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| Hẹn ngày đến?"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spnOutlet_BookAppointment_Customer"/>


    <Spinner
        android:id="@+id/spnDate_BookAppointment_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/TxtDate_BookAppointment_Customer">
        
    </Spinner>

    <TextView
        android:id="@+id/TxtTime_BookAppointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| Hẹn ngày đến?"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spnDate_BookAppointment_Customer"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewTime_BookAppointment_Customer"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/TxtTime_BookAppointment_Customer"/> 
    
    <TextView
        android:id="@+id/TxtTherapist_BookAppointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| Bác sĩ"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recyclerViewTime_BookAppointment_Customer"/>

    <LinearLayout
        android:id="@+id/LinearLayoutTherapist_BookAppointment_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/TxtTherapist_BookAppointment_Customer">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <RadioButton
                android:id="@+id/RadioBtxTherapist_Yes_BookAppointment_Customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chọn bác sĩ"/>
            <RadioButton
                android:id="@+id/RadioBtxTherapist_No_BookAppointment_Customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngẫu nhiên"/>
        </RadioGroup>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewTherapist_BookAppointment_Customer"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayoutTherapist_BookAppointment_Customer"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="visible"/>
    
    <TextView
        android:id="@+id/TxtRoom_BookAppointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| Phòng"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recyclerViewTherapist_BookAppointment_Customer"/>

     <LinearLayout
        android:id="@+id/LinearLayoutRoom_BookAppointment_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/TxtRoom_BookAppointment_Customer">
        <TextView
            android:id="@+id/TxtRoomVIP_BookAppointment_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng VIP "
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/cbRoom_BookAppointment_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/TxtRoomMoney_BookAppointment_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + 50.000 vnd"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/BtxSendConfirm_BookAppointment_Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_below="@+id/LinearLayoutRoom_BookAppointment_Customer"
        android:layout_marginTop="15dp"
        android:background="#24C32B"/>

    

</RelativeLayout>
