<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/Ln123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackborder_customer"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgService_ItemAppointment_ShoppingCardHistoryAppointment_Customer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:background="@drawable/blackborder_customer"
            android:src="@drawable/xonghoi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imgService_ItemAppointment_ShoppingCardHistoryAppointment_Customer">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imglocation_ItemAppointment_ShoppingCardHistoryAppointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_customer"
                    android:background="#FFF"/>

                <TextView
                    android:id="@+id/txtOutlet_ItemAppointment_ShoppingCardHistoryAppointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Chi nhánh Nguyễn Bỉnh Khiêm"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgiconTime_ItemAppointment_ShoppingCardHistoryAppointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time_customer"
                    android:background="#FFF"/>

                <TextView
                    android:id="@+id/txtTime_ItemAppointment_ShoppingCardHistoryAppointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="13g 20/2/2020"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:paddingRight="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtCheck_ItemAppointment_ShoppingCardHistoryAppointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="2dp"
        android:text="Đã thực hiện"
        android:textColor="#0F0"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
