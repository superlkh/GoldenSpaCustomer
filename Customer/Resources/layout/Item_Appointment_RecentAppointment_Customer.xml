<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/Ln123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackborder_customer"
        android:orientation="horizontal"
        android:padding="3dp">
        <ImageView
            android:id="@+id/imgService_ItemRecentAppointment_Appointment_Customer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/xonghoi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imgService_ItemRecentAppointment_Appointment_Customer">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imglocation_ItemRecentAppointment_Appointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_customer"
                    android:background="#FFF"/>

                <TextView
                    android:id="@+id/txtOutletName_ItemRecentAppointment_Appointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Tên chi nhánhgggggggggggggggggggggggggggggggggggggg"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgiconService_ItemRecentAppointment_Appointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_service_customer"
                    android:background="#FFF"/>

                <TextView
                    android:id="@+id/txtTotalOutlet_ItemRecentAppointment_Appointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Tên dịch vụffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:paddingRight="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgMap_ItemRecentAppointment_Appointment_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_map_customer"
        android:background="#FFF"
        android:layout_marginTop="70dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackborder_customer"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/Ln123"
        android:layout_marginBottom="30dp">
        <ImageView
                    android:id="@+id/imgWaiting_ItemRecentAppointment_Appointment_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_waiting_customer"
                    android:background="#FFF"/>
        <TextView
            android:id="@+id/txtTime_ItemRecentAppointment_Appointment_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hẹn đến thời gian, địa điểm 123"
            android:textColor="#000"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
