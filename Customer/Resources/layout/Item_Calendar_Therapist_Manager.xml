<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/blackborder_customer"
    android:padding="2dp"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/img_Service_Outlet_Manager"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/xonghoi"
        android:paddingRight="2dp"
        android:background="@drawable/blackborder_customer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_Service_Outlet_Manager">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtName_Service_Outlet_Manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi nhánh 1"
                android:textSize="20dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/txtId_Service_Outlet_Manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textSize="20dp"
                android:textColor="#000"/>
        </LinearLayout>
        

        <TextView
        android:id="@+id/txtDescripe_Service_Outlet_Manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả chi nhánh"
        android:textSize="20dp"
        android:textColor="#000"/>

        

        
    </LinearLayout>
    
   
</RelativeLayout>