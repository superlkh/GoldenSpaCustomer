<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="170dp">

    <ImageView
        android:id="@+id/imgService_ItemUsedService_Home_Customer"
        android:layout_width="140dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/xonghoi"
        android:padding="2dp"
        android:background="@drawable/blackborder_customer"/>

    <ImageView
        android:id="@+id/imgShoppingcard_ItemUsedService_Home_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:src="@drawable/ic_shoppingcart_customer"
        android:padding="5dp"
        android:background="@drawable/border_blackcircle_customer"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:background="@drawable/blackborder_customer"
        android:layout_below="@+id/imgService_ItemUsedService_Home_Customer">

        <TextView
            android:id="@+id/txtNameService_ItemUsedService_Home_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:text="Combotrị mụn"
            android:textColor="#000"
            android:layout_below="@+id/imgDiscount_ItemUsedService_Home_Customer"/>

        <TextView
            android:id="@+id/txtPriceService_ItemUsedService_Home_Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="200K"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:layout_below="@+id/txtNameService_ItemUsedService_Home_Customer"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imglocation_ItemUsedService_Home_Customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_customer"/>

            <TextView
                android:id="@+id/txtNumberOutletApply_ItemUsedService_Home_Customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="3 chi nhánh áp dụng"
                android:paddingLeft="2dp"
                android:textColor="#000"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
   