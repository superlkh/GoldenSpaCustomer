<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    android:background="@drawable/blackborder_customer"
    android:padding="2dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/imgService_ItemService_Outlet_Customer"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/xonghoi" />

    <ImageView
        android:id="@+id/imgShoppingcard_ItemCombo_Home_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_shoppingcart_customer"
        android:padding="5dp"
        android:background="@drawable/border_blackcircle_customer"/>

    <TextView
        android:id="@+id/txtNameService_ItemService_Outlet_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xông hơi"
        android:maxLines="2"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/imgService_ItemService_Outlet_Customer"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txtPriceService_ItemService_Outlet_Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đồng giá 200K"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@+id/txtNameService_ItemService_Outlet_Customer"
        android:layout_toRightOf="@+id/imgService_ItemService_Outlet_Customer"
        android:padding="5dp"/>





</RelativeLayout> 
